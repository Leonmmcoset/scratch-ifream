{
  "extends": "flarum-tsconfig",
  "include": [
    "src/**/*",
    "../vendor/*/*/js/dist-typings/@types/**/*",
    "@types/**/*" // 新增：包含自定义类型声明
  ],
  "compilerOptions": {
    "declarationDir": "./dist-typings",
    "baseUrl": ".",
    "paths": {
      "flarum/*": ["../vendor/flarum/core/js/dist-typings/*"],
      "flarum/common/models": ["../vendor/flarum/core/js/dist-typings/common/models"], // 明确路径
      "flarum/common/components/*": ["../vendor/flarum/core/js/dist-typings/common/components/*"] // 明确组件路径
    },
    "jsx": "react",
    "jsxFactory": "m",
    "jsxFragmentFactory": "Fragment"
  }
}
